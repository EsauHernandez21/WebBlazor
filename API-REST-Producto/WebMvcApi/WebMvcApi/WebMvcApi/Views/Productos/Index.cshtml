
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@model IEnumerable<WebMvcApi.Models.Producto>

<h1 style="display: inline;">Lista de Productos</h1>
<a asp-action="Create" class="btn btn-success" style="margin-left: 1em; vertical-align: middle; margin-bottom: 10px;">Insertar Producto</a>


<!-- Formulario de búsqueda -->
<form asp-controller="Productos" asp-action="Buscar" method="get">
    <div class="input-group mb-3">
        <input type="text" name="nombre" class="form-control" placeholder="Buscar producto" aria-label="Buscar producto" />
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>Producto ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.ProductoId</td>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>@producto.Precio</td>
                <td>@producto.Stock</td>
                <td>
                    <a asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.ProductoId" class="btn btn-warning" style="margin-right: 0;">Actualizar</a>
                    <form asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.ProductoId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">Eliminar</button>
                    </form>
                </td>
                
             </tr>

        }
    </tbody>
</table>